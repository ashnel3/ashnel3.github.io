---
import { Image } from 'astro:assets'
import PlasmaLayout from '../layout/PlasmaLayout'

// assets
import ProfileLeftImage from '../../public/profile_l.webp'
---

<PlasmaLayout class="absolute inset-0">
  <div class="flex flex-col gap-4 w-full h-full items-center justify-center">
    <a class="mb-2 select-none" href="/about">
      <Image
        alt="User Profile"
        class="rounded-full shadow-xl w-36 md:w-48"
        width={422}
        height={422}
        src={ProfileLeftImage}
        loading="eager"
      />
    </a>
    <div class="py-2 px-4 rounded-md whitespace-nowrap shadow-xl bg-white dark:bg-zinc-900">
      <h2 class="text-xl dark:text-white">
        <span class="select-none">$&nbsp;</span>
        <span>echo</span>
        <span class="text-lime-500 dark:text-lime-300">'Hello World!'</span>
        <span class="animate-blink-1 select-none">&nbsp;&block;</span>
      </h2>
    </div>
  </div>
</PlasmaLayout>
